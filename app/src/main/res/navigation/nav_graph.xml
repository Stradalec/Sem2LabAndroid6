<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.sem2labandroid6.GalleryFragment"
        android:label="Галерея">
        <action
            android:id="@+id/action_to_edit"
            app:destination="@id/editDescriptionFragment" />
    </fragment>

    <fragment
        android:id="@+id/editDescriptionFragment"
        android:name="com.example.sem2labandroid6.EditDescriptionFragment"
        android:label="Edit Description">
        <argument
            android:name="position"
            app:argType="integer"/>
        <argument
            android:name="description"
            app:argType="string"/>
    </fragment>
</navigation>